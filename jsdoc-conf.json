{
  "source": {
    "include": [
      "index.js",
      "initializers",
      "classes",
      "client/ActionheroWebsocketClient.jsdoc",
      "bin",
      "config"
    ],
    "exclude": [
      "test",
      "bin/templates"
    ],
    "includePattern": ".+\\.js(doc|x)?$",
    "excludePattern": "(^|\\/|\\\\)_"
  },
  "opts": {
    "destination": "./docs",
    "template": "node_modules/docdash-actionhero",
    "tutorials": "./tutorials",
    "readme": "./README.md",
    "recurse": true,
    "verbose": true
  },
  "templates": {
    "default": {
      "includeDate": false,
      "staticFiles": {
        "include": [ "./tutorials/images" ]
      }
    }
  },
  "plugins": [
    "plugins/markdown"
  ]
}
